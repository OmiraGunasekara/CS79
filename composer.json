{
  "require": {
    "phpmailer/phpmailer": "^6.9",
    "vlucas/phpdotenv": "^5.6",
    "lulco/phoenix": "^2.5"
  },
  "extra": {
    "APP_ENV": "production"
  },
  "scripts": {
    "post-install-cmd": [
      "@migrate",
      "@generate_env"
    ],
    "post-update-cmd": [
      "@migrate",
      "@generate_env"
    ],
    "migrate": [
      "php vendor/bin/phoenix migrate --config=app/configs/phoenix.php"
    ],
    "generate_env": [
      "cp .env.${APP_ENV} .env"
    ]
  }
}
